/* pages/likes.wxss */

.likes-header-bg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background:#F76F63;
}


.body-user-info-like{
  position: relative;
  color:#fff;
  padding:0;
  height: 300rpx;
}


.likes-userinfo {
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: flex-start;
}

.likes-header-texts{
  z-index: 11;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.likes-header-text-title{
  margin-top: 40rpx;
  font-size:50rpx;
  height: 60rpx;
  line-height: 60rpx;
  color:#ffffff;
  width: 70%;
  text-align: left;
  padding-left: 10%;
  overflow: hidden;
  text-overflow: ellipsis ;
  white-space: nowrap;
}
.likes-header-text-subtitle{
  font-size:40rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  width: 70%;
  text-align: left;
  padding-left: 10%;
  color:yellow;

}
.likes-header-text-description{
  margin-top: 40rpx;
  font-size: 32rpx;
  background: pink;
  width: 90%;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
  text-align: center;
  border-radius:25rpx;
}
.start-like-bg{
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 999;
  opacity:0.4;
  background: #000;
}
.start-like-window{
  width: 60%;
  height:600rpx;
  position: absolute;
  background: #fff;
  z-index: 1000;
  left:20%;
  top: 200rpx;
}
.start-like-window-div{
  width: 100%;
  height: 100%;
  position: relative;
  float: left;
}
.start-like-cloce{

  position: absolute;
  right: 40rpx;
  top: -20rpx;
  width: 40rpx;
  height:40rpx;
}
.start-like-body{

    width: 100%;
    height: 100%;
    float: left;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.start-like-body-icon{

    margin-top: 30rpx;
  width:200rpx;
  height:200rpx;
  border: 3px solid #F76F63;
  border-radius: 50%;
}
.start-like-body-nickname{
  margin-top: 20rpx;
  font-size: 16px;
}
.start-like-body-h1{
  margin-top: 20rpx;
    font-size: 20px;
    color: #F76F63;
}
.start-like-body-submit{

    margin-top: 40rpx;
  color: #fff;
  background-color:  #F76F63;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 13px;
  width: 200rpx;
  border-radius: 40rpx;
}
.start-like-body-span{
  margin-top: 20rpx;
  font-size: 11px;
  color: #ccc;
}
.body-to-search-description{
  text-align: center;
  font-size: 26rpx;
  color: #ddd;
  margin-top:10rpx; 
}

.body-to-search-old{
  border-radius:20px;
  width: 260rpx;
  font-size: 16px;
  line-height:80rpx;
  height: 80rpx;
  background: #ddd;
  color:#fff;
  border: none;

}